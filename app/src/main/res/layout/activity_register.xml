<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/project3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="133dp"
        android:layout_height="103dp"
        android:src="@drawable/image5" />


    <TextView
        android:id="@+id/textView14"
        android:layout_width="362dp"

        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_height="49dp"
        android:text="Welcome to Cscmessenger, Register below"
        android:textSize="16sp"
        android:textStyle="bold" />


    <EditText

        android:id="@+id/input_regfullname"
        android:layout_width="300dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="Enter Your Name Here"
        android:inputType="textPersonName"
        android:textColor="#F44336" />

    <EditText
        android:id="@+id/input_regusername"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="10dp"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:ems="10"
        android:hint="Enter Your Email Address Here"
        android:inputType="textEmailAddress"
        android:textColor="#F44336" />

    <EditText
        android:id="@+id/input_regpassword"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="10dp"

        android:layout_width="300dp"
        android:layout_height="60dp"
        android:ems="10"
        android:hint="Enter Your Password Here"
        android:inputType="textPassword"
        android:textColor="#F44336" />

    <EditText
        android:id="@+id/input_cpass"
        android:layout_marginTop="10dp"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:hint="Comfirm Password Here"
        android:inputType="textPassword"
        android:textColor="#F44336" />

    <Button
        android:id="@+id/btnregister"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"

        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp"
        android:background="#8BC34A"
        android:backgroundTint="#8BC34A"
        android:text="create account"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/regloginlink"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="10dp"

        android:text="Already a Member? Login Here"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold" />



</LinearLayout>